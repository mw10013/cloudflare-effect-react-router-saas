{
  "extends": "./tsconfig.json",
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "e2e/**/*",
    "app/lib/domain.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "composite": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2023"],
    "target": "ES2023",
    "module": "esnext",
    "moduleResolution": "bundler"
  }
}
